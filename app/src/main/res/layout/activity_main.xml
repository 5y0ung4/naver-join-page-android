<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F5F6F7">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="315dp"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="560dp">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/LLID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="아이디"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"

                    android:background="@drawable/border"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/userId"
                        android:layout_width="260dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#ffffff"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="&#64;naver.com" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="8~16자 영문 대 소문자, 숫자, 특수문자를 사용하세요."
                    android:textColor="#ff0000"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- 패스워드 -->
            <LinearLayout
                android:id="@+id/LLPW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="비밀번호"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"

                    android:background="@drawable/border"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="310dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#ffffff"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/textViewPW"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lock" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="8~16자 영문 대 소문자, 숫자, 특수문자를 사용하세요."
                    android:textColor="#ff0000"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLPWC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="비밀번호 재확인"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"

                    android:background="@drawable/border"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/passwordCheck"
                        android:layout_width="310dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#ffffff"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/textViewPWC"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lock" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="비밀번호가 일치하지 않습니다."
                    android:textColor="#ff0000"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- 이름 -->
            <LinearLayout
                android:id="@+id/LLNM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="이름"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"

                    android:background="@drawable/border"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="360dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#ffffff"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="이름은 10자 이하만 작성할 수 있습니다."
                    android:textColor="#ff0000"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLBIRTH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBIRTH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="생년월일"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <TableLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"

                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/year"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:hint="년(4자)"
                            android:maxLength="4"
                            android:padding="5dp"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerMonth"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_border"
                            android:spinnerMode="dropdown" />

                        <EditText
                            android:id="@+id/day"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:hint="일"
                            android:maxLength="2"
                            android:padding="5dp"
                            android:textSize="14sp" />
                    </TableRow>


                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLSX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="성별"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                    <Spinner
                        android:id="@+id/sex"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="3dp"
                        android:layout_width="360dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#ffffff"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:background="@drawable/spinner_border"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            <LinearLayout
                android:id="@+id/LLEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="본인확인 이메일(선택)"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"

                    android:background="@drawable/border"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="360dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#ffffff"
                        android:hint="선택입력"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="이름은 10자 이하만 작성할 수 있습니다."
                    android:textColor="#ff0000"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLPHONE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="휴대전화"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"

                    android:background="@drawable/border"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="360dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#ffffff"
                        android:hint="전화번호 입력"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="이름은 10자 이하만 작성할 수 있습니다."
                    android:textColor="#ff0000"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <android.widget.Button
        android:id="@+id/signup"
        android:text="가입하기"
        android:background="#00aa55"
        android:layout_marginStart="15dp"
        android:textColor="#ffffff"
        android:layout_width="360dp"
        android:layout_height="48dp"/>

</LinearLayout>